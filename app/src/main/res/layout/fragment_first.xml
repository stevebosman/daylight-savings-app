<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <uk.co.stevebosman.daylight.DaylightView
        android:id="@+id/daylight1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/daylight2"
        app:layout_constraintTop_toTopOf="parent"
         />
    <uk.co.stevebosman.daylight.DaylightView
        android:id="@+id/daylight2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/daylight1"
        app:layout_constraintBottom_toTopOf="@id/daylight3"
        />
    <uk.co.stevebosman.daylight.DaylightView
        android:id="@+id/daylight3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/daylight2"
        app:layout_constraintBottom_toTopOf="@id/daylight4"
        />
    <uk.co.stevebosman.daylight.DaylightView
        android:id="@+id/daylight4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/daylight3"
        app:layout_constraintBottom_toTopOf="@id/daylight5"
        />
    <uk.co.stevebosman.daylight.DaylightView
        android:id="@+id/daylight5"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/daylight4"
        app:layout_constraintBottom_toTopOf="@id/daylight6"
        />
    <uk.co.stevebosman.daylight.DaylightView
        android:id="@+id/daylight6"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/daylight5"
        app:layout_constraintBottom_toTopOf="@id/daylight7"
        />
    <uk.co.stevebosman.daylight.DaylightView
        android:id="@+id/daylight7"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/daylight6"
        app:layout_constraintBottom_toTopOf="@id/daylight8"
        />
    <uk.co.stevebosman.daylight.DaylightView
        android:id="@+id/daylight8"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/daylight7"
        app:layout_constraintBottom_toTopOf="@id/daylight9"
        />
    <uk.co.stevebosman.daylight.DaylightView
        android:id="@+id/daylight9"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daylight8"
        />

</androidx.constraintlayout.widget.ConstraintLayout>